{
  "extends": "@ainexsuite/config/tsconfig.json",
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/*": ["./src/*"],
      "@ainexsuite/ui": ["../../packages/ui/src"],
      "@ainexsuite/firebase": ["../../packages/firebase/src"],
      "@ainexsuite/auth": ["../../packages/auth/src"],
      "@ainexsuite/ai": ["../../packages/ai/src"],
      "@ainexsuite/types": ["../../packages/types/src"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
