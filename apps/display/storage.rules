rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to manage their own background images
    match /users/{userId}/backgrounds/{allPaths=**} {
      allow read, delete: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId 
                   && request.resource.size < 10 * 1024 * 1024; // Increased limit to 10MB
    }
  }
}
