rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User data - secure by default, only owner access
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Recursive match for all subcollections under a user
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
