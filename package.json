{
  "name": "ainexsuite",
  "version": "1.0.0",
  "private": true,
  "description": "AINexSuite - Multi-app productivity suite with 8 apps + main dashboard",
  "scripts": {
    "dev": "turbo run dev --concurrency=20",
    "dev:main": "turbo run dev --filter @ainexsuite/main",
    "dev:notes": "turbo run dev --filter @ainexsuite/notes",
    "dev:journal": "turbo run dev --filter @ainexsuite/journal",
    "dev:todo": "turbo run dev --filter @ainexsuite/todo",
    "dev:health": "turbo run dev --filter @ainexsuite/health",
    "dev:album": "turbo run dev --filter @ainexsuite/album",
    "dev:habits": "turbo run dev --filter @ainexsuite/habits",
    "dev:hub": "turbo run dev --filter @ainexsuite/hub",
    "dev:fit": "turbo run dev --filter @ainexsuite/fit",
    "dev:admin": "turbo run dev --filter admin",
    "dev:notenex": "turbo run dev --filter @ainexsuite/notenex",
    "build": "turbo run build",
    "build:apps": "turbo run build --filter './apps/*'",
    "build:packages": "turbo run build --filter './packages/*'",
    "build:workspace": "turbo run build --filter '@ainexsuite/types' --filter '@ainexsuite/firebase' --filter '@ainexsuite/auth' --filter '@ainexsuite/ui' --filter '@ainexsuite/ai'",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "deploy:all": "pnpm run -r --workspace-concurrency=1 deploy",
    "deploy:main": "turbo run deploy --filter @ainexsuite/main",
    "deploy:notes": "turbo run deploy --filter @ainexsuite/notes",
    "deploy:journal": "turbo run deploy --filter @ainexsuite/journal",
    "deploy:todo": "turbo run deploy --filter @ainexsuite/todo",
    "deploy:health": "turbo run deploy --filter @ainexsuite/health",
    "deploy:album": "turbo run deploy --filter @ainexsuite/album",
    "deploy:habits": "turbo run deploy --filter @ainexsuite/habits",
    "deploy:hub": "turbo run deploy --filter @ainexsuite/hub",
    "deploy:fit": "turbo run deploy --filter @ainexsuite/fit",
    "deploy:admin": "turbo run deploy --filter admin",
    "deploy:notenex": "turbo run deploy --filter @ainexsuite/notenex",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "pm2:delete": "pm2 delete all",
    "pm2:logs": "pm2 logs",
    "pm2:status": "pm2 status",
    "pm2:monit": "pm2 monit",
    "prepare": "husky"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/generators/*"
  ],
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "next": "15.5.9",
    "pm2": "^5.3.0",
    "prettier": "^3.7.4",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --cache --fix --max-warnings 0"
    ],
    "*.{js,jsx,json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@radix-ui/react-toast": "^1.1.0",
    "clsx": "^2.1.1",
    "firebase": "^10.7.2",
    "firebase-admin": "^12.7.0",
    "geist": "^1.5.1",
    "react-hook-form": "^7.69.0",
    "zod": "^3.23.8"
  },
  "pnpm": {
    "overrides": {
      "node-forge": ">=1.3.2",
      "glob": ">=10.5.0",
      "react": "19.2.0",
      "react-dom": "19.2.0"
    }
  }
}
